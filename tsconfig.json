{
  "compilerOptions": {
    "module": "nodenext",
    "moduleDetection": "force",
    "target": "ESNext",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "paths": {
      "@tests/*": ["./tests*"],
      "@lib/*": ["./lib/*"],
      "@playwright.config": ["./playwright.config.ts"],
    }
  }
}
